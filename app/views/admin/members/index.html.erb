<h2><%= t '.page-title' %></h2>

<%= render 'legal' %>

<%= link_to t(:new_member), new_admin_member_path %>

<table class='table'>
  <thead>
    <tr>
      <th><%= Member.human_attribute_name(:full_name) %></th>
      <th><%= Member.human_attribute_name(:joined) %></th>
      <th><%= Member.human_attribute_name(:email) %></th>
      <th><%= Member.human_attribute_name(:address) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.full_name %></td>
        <td><%= member.join_date.to_s(:long) %></td>
        <td><%= member.email %></td>
        <td><%= member.address %></td>
        <td><%= link_to t(:show), [:admin, member] %></td>
        <td><%= link_to t(:edit), edit_admin_member_path(member) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

